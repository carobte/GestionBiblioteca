@{
    ViewData["Title"] = "BookEnterFrom";
}

<link rel="stylesheet" href="~/css/BookEnterFrom.css" />

<div class="container">
    <h1 class="text-white">@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-12">
            <form class="bg-secondary" action="index.html" method="post">
                <fieldset>
                    <legend class="text-dark fw-bold"><span class="number ">1</span> Book Information</legend>
                    
                    <label class="text-white fw-bold" for="name">Book Title:</label>
                    <input class="form-control" type="text" id="name" name="book_title" required>
                    
                    <label class="text-white fw-bold" for="author">Author:</label>
                    <input class="form-control" type="text" id="author" name="book_author" required>
                    
                    <label class="text-white fw-bold" for="isbn">ISBN:</label>
                    <input class="form-control" type="text" id="isbn" name="book_isbn" required>
                    
                </fieldset>

                <fieldset>
                    <legend class="text-dark fw-bold"><span class="number">2</span> Additional Details</legend>
                    
                    <label class="text-white fw-bold" for="category">Category:</label>
                    <select id="category" name="book_category" required>
                        <option value="">Select a category</option>
                        <optgroup label="Fiction">
                            <option value="science_fiction">Science Fiction</option>
                            <option value="fantasy">Fantasy</option>
                            <option value="mystery">Mystery</option>
                            <option value="romance">Romance</option>
                            <option value="historical">Historical</option>
                        </optgroup>
                        <optgroup label="Non-Fiction">
                            <option value="biography">Biography</option>
                            <option value="self_help">Self-Help</option>
                            <option value="business">Business</option>
                            <option value="health">Health</option>
                            <option value="education">Education</option>
                        </optgroup>
                    </select>
                    
                    <label class="text-white fw-bold" for="cover_image">Cover Image URL:</label>
                    <input class="form-control" type="text" id="cover_image" name="book_cover_image" required>
                    
                    <label class="text-white fw-bold" for="stock">Stock:</label>
                    <input class="form-control" type="number" id="stock" name="book_stock" min="0" required>
                    
                </fieldset>

                <button  type="submit">Enter</button>
                @Html.ActionLink("Cancel", "Index", "Admin", null, new { @class = "btn btn-danger btn-full-width" })
            </form>
        </div>
    </div>
</div>
